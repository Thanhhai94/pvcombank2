<form action="/DScongviec/quanly/<%= staffQL.CIF %>" method="GET">
    <div class="row inforTTNSQL" >
        <div class="col-1">
            <p><%= staffQL.CIF %></p>
        </div>
        <div class="col-2">
            <p><%= staffQL.Name %></p>
        </div>
        <div class="col-3">
            <p><i class="fa-solid fa-inbox"></i> <%= staffQL.Email %></p>
        </div>
        <div class="col-2">
            <p><i class="fa-solid fa-mobile-screen"></i> <%= staffQL.Mobile %></p>
        </div>
        <div class="col-2">
            <div style="display: inline-block; align-items: left;">
                <div>
                    <% for(var i = 0; i < listJob.length; ++i) {%>
                        <% if(listJob[i].CIF == staffQL.CIF) { %>
                            <p style="font-weight: 400 ;color: rgb(190, 45, 45);">Chưa thực hiện: <%= listJob[i].chuathuchien %> </p>
                        <% }} %>
                </div>
                <div>
                    <% for(var i = 0; i < listJob.length; ++i) {%>
                        <% if(listJob[i].CIF == staffQL.CIF) { %>
                            <p style="font-weight: 400 ;color: rgb(147, 19, 93);">Đang thực hiện: <%= listJob[i].thuchien %> </p>
                        <% }} %>
                </div>
                <div>
                    <% for(var i = 0; i < listJob.length; ++i) {%>
                        <% if(listJob[i].CIF == staffQL.CIF) { %>
                            <p style="font-weight: 400 ;color: rgb(102, 141, 120);">Hoàn thành: <%= listJob[i].hoanthanh %> </p>
                        <% }} %>
                </div>
            </div>
        </div>
        <div class="col-2" style="display: block; margin: auto 0px; text-align: center;">
                <button style="color: white;
                border: none;
                border-radius: 5px;
                background: green;
                padding: 2px 10px;
            " type="submit"><i class="fa-solid fa-circle-check"></i> Kiểm tra</button>
        </div>
    </div>
</form>