<div style="overflow-x:scroll; 
overflow-y: scroll; 
height: calc(100vh - 150px) !important;">

<table id="example-Chi" class="table table-striped table-bordered" cellspacing="0" width="100%">
<thead>
    <tr>
        <th style="width: 30%;">Ngày</th>
        <th style="width: 50%;">Nội dung chi</th>
        <th style="width: 20%;">Số tiền</th>
    </tr>
</thead>
<tbody>
    <% list.map(value => { %>
        <tr>
            <td style="width: 30%;"><button style="font-weight: 500;
                color: white;
                background: #0bc10b;
                border-radius: 5px;
                border: none;
                padding: 0px 11px; margin-right: 5px;">Edit</button><%= value.Rptdate %></td>
            <td style="width: 50%;"><%= value.FULL_NAME %></td>
            <td style="width: 20%;"><%= value.DIFF %></td>
        </tr>
    <% }) %>
    
</tbody>
</table>
    
</div>


<script>
$(document).ready(function () {
//Only needed for the filename of export files.
//Normally set in the title tag of your page.
document.title = "Simple DataTable";
// Create search inputs in footer
$("#example-Chi tfoot th").each(function () {
var title = $(this).text();
$(this).html('<input type="text" placeholder="Search ' + title + '" />');
});
// DataTable initialisation
var table = $("#example-Chi").DataTable({
dom: '<"dt-buttons"Bf><"clear">lirtp',
paging: true,
autoWidth: true,
buttons: [
    "colvis",
    "copyHtml5",
    "csvHtml5",
    "excelHtml5",
    "pdfHtml5",
],
initComplete: function (settings, json) {
    var footer = $("#example-Chi tfoot tr");
    $("#example-Chi thead").append(footer);
}
});

// Apply the search
$("#example-Chi thead").on("keyup", "input", function () {
table.column($(this).parent().index())
.search(this.value)
.draw();
});
});


</script>